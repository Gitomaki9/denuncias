{
  "version": 2,
  "builds": [
    {
      "src": "html/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "css/*",
      "use": "@vercel/static"
    },
    {
      "src": "js/*",
      "use": "@vercel/static"
    },
    {
      "src": "assets/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    // Archivos CSS - servirlos directamente
    {
      "src": "/css/(.*)",
      "dest": "/css/$1"
    },
    // Archivos JS - servirlos directamente
    {
      "src": "/js/(.*)",
      "dest": "/js/$1"
    },
    // Archivos de assets (imágenes, etc.)
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    // Página principal
    {
      "src": "/",
      "dest": "/html/index.html"
    },
    // Páginas con nombres específicos
    {
      "src": "/login",
      "dest": "/html/login.html"
    },
    {
      "src": "/registro",
      "dest": "/html/registro.html"
    },
    {
      "src": "/contactanos",
      "dest": "/html/contactanos.html"
    },
    {
      "src": "/normativa",
      "dest": "/html/normativa.html"
    },
    {
      "src": "/perfil",
      "dest": "/html/perfil.html"
    },
    {
      "src": "/denuncias",
      "dest": "/html/denuncias.html"
    },
    {
      "src": "/crear_denuncia",
      "dest": "/html/crear_denuncia.html"
    },
    // Catch-all para otras páginas
    {
      "src": "/(.*)",
      "dest": "/html/$1.html"
    }
  ],
  "rewrites": [
    // Esto permite que las rutas desde html/ funcionen
    {
      "source": "/:path*",
      "destination": "/html/:path*"
    }
  ],
  "headers": [
    {
      "source": "/css/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Content-Type",
          "value": "text/css"
        }
      ]
    },
    {
      "source": "/js/(.*)",
      "headers": [
        {
          "key": "Cache-Control", 
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
