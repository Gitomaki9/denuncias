{
  "trailingSlash": false,
  "cleanUrls": true,
  "routes": [
    // Servir imágenes directamente en assets/
    {
      "src": "/assets/([^/]+\.(svg|png|jpg|jpeg|gif))",
      "dest": "/assets/$1"
    },
    // Servir imágenes en assets/images/
    {
      "src": "/assets/images/(.*)",
      "dest": "/assets/images/$1"
    },
    // Servir CSS y JS
    {
      "src": "/css/(.*)",
      "dest": "/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/js/$1"
    },
    // Rutas de páginas
    {
      "src": "/",
      "dest": "/html/index.html"
    },
    {
      "src": "/login",
      "dest": "/html/login.html"
    },
    {
      "src": "/registro",
      "dest": "/html/registro.html"
    },
    {
      "src": "/contactanos",
      "dest": "/html/contactanos.html"
    },
    {
      "src": "/normativa",
      "dest": "/html/normativa.html"
    },
    {
      "src": "/perfil",
      "dest": "/html/perfil.html"
    },
    {
      "src": "/denuncias",
      "dest": "/html/denuncias.html"
    },
    {
      "src": "/crear_denuncia",
      "dest": "/html/crear_denuncia.html"
    },
    // Catch-all
    {
      "src": "/(.*)",
      "dest": "/html/$1.html",
      "status": 200
    }
  ]
}
